{
  "compilerOptions": {
    "pretty": true,
    "target": "ES2018",
    "lib": ["dom", "es7"],
    "removeComments": true,
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": false, // HACK(theis): should be true!
    "strictBindCallApply": true, // HACK
    "noUnusedLocals": false, // HACK(theis): should be true!
    "noImplicitAny": false, // HACK(theis): should be true!
  },
  "allowSyntheticDefaultImports": true,
  "include": ["./packages"],
}
